<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.agricultura.sistema.controller.RelatorioController" spacing="10" style="-fx-padding: 20;">
    <Label text="Relatórios Gerenciais">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
            <Tab text="Lista de Devedores">
                <content>
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <TableView fx:id="tabelaDevedores" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colunaNome" text="Produtor" prefWidth="300" />
                                <TableColumn fx:id="colunaValor" text="Total Devido" prefWidth="200" />
                            </columns>
                        </TableView>
                        <Label fx:id="lblTotalGeral" text="Total Geral a Receber: R$ 0,00">
                             <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </VBox>
                </content>
            </Tab>
            <Tab text="Gráfico">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <children>
                            <PieChart fx:id="graficoPizza" layoutX="50.0" layoutY="0.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                        </children>
                    </AnchorPane>
                </content>
            </Tab>
        </tabs>
    </TabPane>
</VBox>
