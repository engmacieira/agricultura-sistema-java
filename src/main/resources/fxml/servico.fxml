<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.agricultura.sistema.controller.ServicoController"
      spacing="20" styleClass="background">

    <Label text="Gestão de Serviços" styleClass="page-header"/>

    <VBox styleClass="card" spacing="15">
        <Label text="Novo Serviço" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        
        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="60"/> <ColumnConstraints hgrow="ALWAYS"/>              <ColumnConstraints hgrow="NEVER" minWidth="90"/> <ColumnConstraints hgrow="NEVER" prefWidth="150"/> </columnConstraints>

            <Label text="Nome (*):" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
            <TextField fx:id="txtNome" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Ex: Arar Terra, Colheita..."/>
            
            <Label text="Valor Unit. (R$):" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="form-label"/>
            <TextField fx:id="txtValor" GridPane.columnIndex="3" GridPane.rowIndex="0" promptText="0.00"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Limpar" onAction="#onLimpar" styleClass="button, btn-secondary"/>
            <Button text="Salvar Serviço" onAction="#onSalvar" defaultButton="true" styleClass="button, btn-primary"/>
        </HBox>
    </VBox>

    <VBox spacing="10" VBox.vgrow="ALWAYS">
        
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Serviços Cadastrados" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/> <Button text="Editar Selecionado" onAction="#onEditar" styleClass="button, btn-secondary"/>
            <Button text="Excluir" onAction="#onExcluir" styleClass="button, btn-danger"/>
        </HBox>

        <TableView fx:id="tabelaServicos" VBox.vgrow="ALWAYS" styleClass="table-view, card">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60" style="-fx-alignment: CENTER;">
                    <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
                </TableColumn>
                
                <TableColumn fx:id="colNome" text="Descrição do Serviço" prefWidth="400">
                    <cellValueFactory><PropertyValueFactory property="nome"/></cellValueFactory>
                </TableColumn>
                
                <TableColumn fx:id="colValor" text="Valor Unitário (R$)" prefWidth="150" style="-fx-alignment: CENTER-RIGHT;">
                    <cellValueFactory><PropertyValueFactory property="valorUnitario"/></cellValueFactory>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>

</VBox>