<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.agricultura.sistema.controller.ExecucaoController"
      spacing="20" styleClass="background">

    <Label text="Gestão de Execuções" styleClass="page-header"/>

    <VBox styleClass="card" spacing="20">
        <Label text="Registrar Nova Execução" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="70"/> <ColumnConstraints hgrow="ALWAYS"/>              <ColumnConstraints hgrow="NEVER" minWidth="70"/> <ColumnConstraints hgrow="ALWAYS"/>              </columnConstraints>
            
            <Label text="Produtor:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
            <ComboBox fx:id="cmbProdutor" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Selecione o Produtor..."/>
            
            <Label text="Serviço:" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="form-label"/>
            <ComboBox fx:id="cmbServico" maxWidth="Infinity" GridPane.columnIndex="3" GridPane.rowIndex="0" promptText="Selecione o Serviço..."/>
        </GridPane>

        <HBox spacing="20">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Data da Execução:" styleClass="form-label"/>
                <DatePicker fx:id="dtDataExecucao" maxWidth="Infinity"/>
            </VBox>
            
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Qtd. Horas:" styleClass="form-label"/>
                <TextField fx:id="txtHoras" promptText="Ex: 1.5"/>
            </VBox>
            
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Valor Total (R$):" styleClass="form-label"/>
                <TextField fx:id="txtValorTotal" editable="false" text="0.00" 
                           style="-fx-background-color: #f0f0f0; -fx-font-weight: bold; -fx-opacity: 1;"/>
            </VBox>
        </HBox>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Limpar" onAction="#onLimpar" styleClass="button, btn-secondary"/>
            <Button text="Salvar Execução" onAction="#onSalvar" defaultButton="true" styleClass="button, btn-primary"/>
        </HBox>
    </VBox>

    <VBox spacing="10" VBox.vgrow="ALWAYS">
        
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Histórico de Execuções" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            
            <Button text="Editar Selecionado" onAction="#onEditar" styleClass="button, btn-secondary"/>
            <Button text="Excluir" onAction="#onExcluir" styleClass="button, btn-danger"/>
        </HBox>

        <TableView fx:id="tabelaExecucoes" VBox.vgrow="ALWAYS" styleClass="table-view, card">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50" style="-fx-alignment: CENTER;">
                    <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
                </TableColumn>
                
                <TableColumn fx:id="colProdutor" text="Produtor" prefWidth="200">
                     </TableColumn>
                
                <TableColumn fx:id="colServico" text="Serviço" prefWidth="200"/>
                
                <TableColumn fx:id="colData" text="Data" prefWidth="100" style="-fx-alignment: CENTER;"/>
                
                <TableColumn fx:id="colHoras" text="Horas" prefWidth="80" style="-fx-alignment: CENTER;"/>
                
                <TableColumn fx:id="colTotal" text="Total (R$)" prefWidth="100" style="-fx-alignment: CENTER-RIGHT; font-weight: bold;"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>

</VBox>