<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.agricultura.sistema.controller.ExecucaoController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Gestão de Execuções" textFill="#2c3e50">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <!-- Formulario -->
            <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
               <children>
                  <HBox spacing="15.0">
                     <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Produtor" />
                              <ComboBox fx:id="cmbProdutor" maxWidth="1.7976931348623157E308" promptText="Selecione o Produtor" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Serviço" />
                              <ComboBox fx:id="cmbServico" maxWidth="1.7976931348623157E308" promptText="Selecione o Serviço" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox spacing="15.0">
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Data Execução" />
                              <DatePicker fx:id="dtDataExecucao" prefWidth="150.0" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Horas Prestadas" />
                              <TextField fx:id="txtHoras" prefWidth="120.0" promptText="Ex: 5.5" />
                           </children>
                        </VBox>
                         <VBox spacing="5.0">
                           <children>
                              <Label text="Valor Total (R$)" />
                              <TextField fx:id="txtValorTotal" editable="false" prefWidth="120.0" promptText="Calculado..." style="-fx-background-color: #ecf0f1;" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox spacing="10.0" alignment="CENTER_RIGHT">
                     <children>
                        <Button onAction="#onLimpar" text="Limpar" />
                        <Button onAction="#onSalvar" text="Salvar Execução" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
                     </children>
                  </HBox>
               </children>
            </VBox>

            <!-- Table -->
            <TableView fx:id="tabelaExecucoes" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colId" prefWidth="50.0" text="ID">
                      <cellValueFactory>
                          <PropertyValueFactory property="id" />
                      </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="colProdutor" prefWidth="200.0" text="Produtor" />
                  <TableColumn fx:id="colServico" prefWidth="200.0" text="Serviço" />
                  <TableColumn fx:id="colData" prefWidth="100.0" text="Data" />
                  <TableColumn fx:id="colHoras" prefWidth="80.0" text="Horas" />
                  <TableColumn fx:id="colTotal" prefWidth="100.0" text="Total (R$)" />
               </columns>
            </TableView>

            <!-- Table Actions -->
            <HBox spacing="10.0">
               <children>
                  <Button onAction="#onEditar" text="Editar Selecionado" style="-fx-background-color: #f39c12; -fx-text-fill: white;" />
                  <Button onAction="#onExcluir" text="Excluir Selecionado" style="-fx-background-color: #c0392b; -fx-text-fill: white;" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
