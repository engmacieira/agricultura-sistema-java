<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.agricultura.sistema.controller.ServicoController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Gestão de Serviços" textFill="#2c3e50">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <!-- Formulario -->
            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Nome do Serviço" />
                        <TextField fx:id="txtNome" prefWidth="300.0" promptText="Ex: Arar Terra" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Valor Unitário (R$)" />
                        <TextField fx:id="txtValor" prefWidth="150.0" promptText="0.00" />
                     </children>
                  </VBox>
               </children>
            </HBox>

            <!-- Actions -->
            <HBox spacing="10.0">
               <children>
                  <Button onAction="#onSalvar" text="Salvar" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
                  <Button onAction="#onLimpar" text="Limpar" />
               </children>
            </HBox>

            <!-- Table -->
            <TableView fx:id="tabelaServicos" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colId" prefWidth="50.0" text="ID">
                      <cellValueFactory>
                          <PropertyValueFactory property="id" />
                      </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="colNome" prefWidth="300.0" text="Nome">
                      <cellValueFactory>
                          <PropertyValueFactory property="nome" />
                      </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="colValor" prefWidth="150.0" text="Valor Unitário">
                      <cellValueFactory>
                          <PropertyValueFactory property="valorUnitario" />
                      </cellValueFactory>
                  </TableColumn>
               </columns>
            </TableView>

            <!-- Table Actions -->
            <HBox spacing="10.0">
               <children>
                  <Button onAction="#onEditar" text="Editar" style="-fx-background-color: #f39c12; -fx-text-fill: white;" />
                  <Button onAction="#onExcluir" text="Excluir" style="-fx-background-color: #c0392b; -fx-text-fill: white;" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
