<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.agricultura.sistema.controller.PagamentoController"
      spacing="20" styleClass="background">

    <Label text="Gestão de Pagamentos" styleClass="page-header"/>

    <VBox styleClass="card" spacing="20">
        <Label text="Novo Pagamento" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <VBox spacing="5">
            <Label text="Selecione a Execução Pendente (Produtor - Serviço):" styleClass="form-label"/>
            <ComboBox fx:id="cbExecucao" maxWidth="Infinity" promptText="Busque pelo nome do produtor..."/>
        </VBox>

        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #fdf2f2; -fx-background-radius: 6; -fx-padding: 15; -fx-border-color: #e74c3c; -fx-border-width: 0 0 0 4;">
            
            <VBox spacing="5" minWidth="150" alignment="CENTER_LEFT">
                <Label text="SALDO DEVEDOR" style="-fx-font-size: 10px; -fx-font-weight: bold; -fx-text-fill: #c0392b;"/>
                <Label fx:id="lblSaldo" text="R$ 0,00" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #c0392b;"/>
            </VBox>
            
            <Separator orientation="VERTICAL"/>

            <GridPane hgap="15" vgap="10" HBox.hgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="90"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Valor a Pagar (R$):" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
                <TextField fx:id="txtValor" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="0.00"/>

                <Label text="Data do Pagto:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
                <DatePicker fx:id="dtPagamento" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </GridPane>
        </HBox>

        <HBox alignment="CENTER_RIGHT">
            <Button text="Confirmar Pagamento" onAction="#salvarPagamento" defaultButton="true" styleClass="button, btn-primary"/>
        </HBox>
    </VBox>

    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Histórico de Pagamentos da Execução Selecionada" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

        <TableView fx:id="tbPagamentos" VBox.vgrow="ALWAYS" styleClass="table-view, card">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50" style="-fx-alignment: CENTER;">
                    <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
                </TableColumn>
                
                <TableColumn fx:id="colData" text="Data do Pagamento" prefWidth="150" style="-fx-alignment: CENTER;">
                    <cellValueFactory><PropertyValueFactory property="dataPagamento"/></cellValueFactory>
                </TableColumn>
                
                <TableColumn fx:id="colValor" text="Valor Pago (R$)" prefWidth="150" style="-fx-alignment: CENTER-RIGHT; -fx-font-weight: bold; -fx-text-fill: #27ae60;">
                    <cellValueFactory><PropertyValueFactory property="valor"/></cellValueFactory>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>

</VBox>