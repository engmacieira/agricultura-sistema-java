<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.agricultura.sistema.controller.ProdutorController"
      spacing="20" styleClass="background">
    
    <Label text="Gestão de Produtores" styleClass="page-header"/>

    <VBox styleClass="card" spacing="15">
        <Label text="Dados Cadastrais" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        
        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="80"/> <ColumnConstraints hgrow="ALWAYS"/>              <ColumnConstraints hgrow="NEVER" minWidth="80"/> <ColumnConstraints hgrow="ALWAYS"/>              </columnConstraints>

            <Label text="Nome (*):" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
            <TextField fx:id="txtNome" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Nome Completo"/>
            
            <Label text="Apelido:" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="form-label"/>
            <TextField fx:id="txtApelido" GridPane.columnIndex="3" GridPane.rowIndex="0" promptText="Como é conhecido"/>
            
            <Label text="CPF/CNPJ:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
            <TextField fx:id="txtCpf" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="000.000.000-00"/>
            
            <Label text="Região:" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="form-label"/>
            <TextField fx:id="txtRegiao" GridPane.columnIndex="3" GridPane.rowIndex="1" promptText="Ex: Comunidade do Vale"/>
            
            <Label text="Referência:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label"/>
            <TextField fx:id="txtReferencia" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Ponto de referência"/>
            
            <Label text="Telefone:" GridPane.columnIndex="2" GridPane.rowIndex="2" styleClass="form-label"/>
            <TextField fx:id="txtTelefone" GridPane.columnIndex="3" GridPane.rowIndex="2" promptText="(00) 00000-0000"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Limpar Campos" onAction="#onLimpar" styleClass="button, btn-secondary"/>
            <Button fx:id="btnSalvar" text="Salvar Produtor" onAction="#onSalvar" defaultButton="true" styleClass="button, btn-primary"/>
        </HBox>
    </VBox>

    <VBox spacing="10" VBox.vgrow="ALWAYS">
        
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Produtores Cadastrados" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/> <Button text="Editar Selecionado" onAction="#onEditar" styleClass="button, btn-secondary"/>
            <Button text="Excluir" onAction="#onExcluir" styleClass="button, btn-danger"/>
        </HBox>

        <TableView fx:id="tabelaProdutores" VBox.vgrow="ALWAYS" styleClass="table-view, card">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50" style="-fx-alignment: CENTER;">
                    <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colNome" text="Nome" prefWidth="250">
                    <cellValueFactory><PropertyValueFactory property="nome"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colApelido" text="Apelido" prefWidth="150">
                    <cellValueFactory><PropertyValueFactory property="apelido"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colCpf" text="CPF" prefWidth="120">
                    <cellValueFactory><PropertyValueFactory property="cpf"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colRegiao" text="Região" prefWidth="150">
                    <cellValueFactory><PropertyValueFactory property="regiao"/></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colTelefone" text="Telefone" prefWidth="120">
                    <cellValueFactory><PropertyValueFactory property="telefone"/></cellValueFactory>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>

</VBox>